<?xml version="1.0" encoding="UTF-8"?>
<addons>
	<addon id="plugin.program.thehellwizard" name="THEHELL Wizard" version="0.0.1" provider-name="THEHELL">
		<requires>
			<import addon="xbmc.python" version="2.1.0"/>
		</requires>
		<extension point="xbmc.python.pluginsource" library="default.py">
			<provides>program executable</provides>
		</extension>
		<extension point="xbmc.service" library="startup.py" start="startup" />
		<extension point="xbmc.addon.metadata">
			<summary>Installer for THEHELL Builds</summary>
			<description>This Wizard allows you to install the latest version of builds from THEHELL.  It also provides Maintenance, Tools and Tweaks sections to help you keep your Media Center running as smoothly as possible.</description>
			<platform>all</platform>
		</extension>
	</addon>
	<addon id="repository.thehell" name="THEHELL Addon Repo" version="0.0.7" provider-name="thehell">
		<requires>
			<import addon="xbmc.addon" version="12.0.0"/>
		</requires>
		<extension point="xbmc.addon.repository" name="THEHELL Addon Repo">
			<dir>
				<info compressed="false">https://raw.githubusercontent.com/rvermaat/thehell/master/repo/addons.xml</info>
				<checksum>https://raw.githubusercontent.com/rvermaat/thehell/master/repo/addons.md5</checksum>
				<datadir zip="true">https://raw.githubusercontent.com/rvermaat/thehell/master/repo/zips/</datadir>
			</dir>
		</extension>
		<extension point="xbmc.addon.metadata">
			<summary>THEHELL Addon</summary>
			<description>THEHELL Addon Repo</description>
			<platform>all</platform>
		</extension>
	</addon>
</addons>
